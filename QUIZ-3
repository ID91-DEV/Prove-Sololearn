import java.util.Scanner;

public class Program
{
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		String text = scanner.nextLine();
		char[] arr = text.toCharArray();
		
		//your code goes here

		String balik = "";
        for (char i : arr)
            balik = i + balik;
        System.out.println(balik);
		
	}
}
